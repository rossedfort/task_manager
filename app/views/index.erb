<div class='container-fluid'>
  <div class='container-fluid navbar navbar-default'>
    <a class='container-fluid navbar navbar-brand navbar-link nav navbar-nav' href="/">Back</a>
    <a class='container-fluid navbar navbar-brand navbar-link nav navbar-nav' href="/tasks/new">New</a>
  </div>

  <div class='well text-center'>
    <h1>All Tasks</h1>

    <% @tasks.each do |task| %>
      <h3 id="task"><%= task.id %>: <a href="/tasks/<%= task.id %>"><%= task.title %></a></h3>
      <a href="/tasks/<%= task.id %>/edit" class="btn btn-info" role="button">Edit</a>
      <form action="/tasks/<%= task.id %>" method="POST">
        <input type="hidden" name="_method" value="delete">
        <input class="btn btn-warning" type="submit" value="Delete"/>
      </form>
    <% end %>
  </div>
</div>
